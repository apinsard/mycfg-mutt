source ~/.config/mutt/muttrc

set from = "antoine.pinsard@cocoonr.fr"
set realname = "Antoine Pinsard"

set my_pass = "`gpg -d ~/.secret/.passwd.gpg | grep ^mail_cocoonr: | cut -d: -f2-`"

