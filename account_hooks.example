#-----------------------------------------------------------------------------
# Account Hooks
#-----------------------------------------------------------------------------

# Retrieve encrypted passwords
set my_pass_gmail=`gpg -d ~/.secret/.passwd.gpg | awk '/mail_gmail:/ {print $2}'`
set my_pass_example=`gpg -d ~/.secret/.passwd.gpg | awk '/mail_example:/ {print $2}'`

account-hook . 'unset imap_user imap_pass'
account-hook 'imaps://username@gmail.com@imap.gmail.com/' "set imap_user=username@gmail.com imap_pass=$my_pass_gmail smtp_pass=$my_pass_gmail"
account-hook 'imaps://username@example.comr@imap.gmail.com/' "set imap_user=username@example.com imap_pass=$my_pass_example smtp_pass=$my_pass_example"
